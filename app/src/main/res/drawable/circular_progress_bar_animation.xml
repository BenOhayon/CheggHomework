<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:toDegrees="270"
    android:pivotX="50%"
    android:pivotY="50%">

    <shape
        android:shape="ring"
        android:useLevel="false">

        <gradient
            android:startColor="@color/progress_bar_gradient_start_color"
            android:centerColor="@color/progress_bar_gradient_center_color"
            android:endColor="@color/progress_bar_gradient_end_color"
            android:centerY="0.5"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>